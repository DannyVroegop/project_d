@page
@model ADHD_App.Pages.HomeModel
@{
    ViewData["Title"] = "schoolwerk";
}

<partial name="Taskbar" />
<div id="schoolvakken">

    <div class="schoolvak">
        <div class="vak">
            <a href="MemoryGame">
                <button type="button">
                    <span>
                        <img src="images/Book.png" />
                        <h4>Engels</h4>
                    </span>
                </button>
            </a>
        </div>

</div>
<script>
    fetch('api/SubjectAndProgressController')
        .then(response => response.json())
        .then(data => {
            console.log({ data })
            var vakken = data?.[0].map((vak) => {

                // Create a div element
                const div = document.createElement('div');

                // Set the innerHTML property with the desired HTML structure
                div.innerHTML = `
            <div class="schoolvak">
                <div class="vak">
                    <a href="ConnectQTOA?vak=${vak.subject}&progress=${vak.progresslevel}">
                        <button type="button">
                            <span>
                                <img src="images/Book.png" />
                                <h4>${vak.subject}</h4>
                            </span>
                        </button>
                    </a>
                </div>
                <div class="progressbar">
                    <div class="skill" style="width: ${vak.progresslevel}0%;">${vak.progresslevel}0%</div>
                </div>
                <div class="empty"></div>
            </div>
        `;

                var schoolvakken = document.getElementById("schoolvakken");
                schoolvakken.appendChild(div);
            });



    @* data.map((question, index) => {
                const vraagDiv = document.getElementById('vraag' + (index + 1));
                vraagDiv.textContent = question.question;
                const antwoordDiv = document.getElementById('antwoord' + (index + 1));
                antwoordDiv.textContent = question.answer;
                })*@
        });
</script>

<style>
    #schoolvakken {
        background-color: rgb(192, 192, 192);
        border-end-end-radius: 15px;
        border-end-start-radius: 15px;
        flex-direction: column;
        display: flex;
        flex-wrap: wrap;
    }

    .schoolvak {
        display: flex;
        column-gap: 20px;
        margin: 10px;
        flex-wrap: wrap;
    }

    .vak {}

    .progressbar {
        margin-right: 20px;
        align-self: center;
        flex-grow: 2;
        background-color: lightgray;
        border-radius: 15px;
    }

    .skill {
        background-color: rgb(116, 194, 92);
        color: white;
        padding: 1%;
        text-align: right;
        font-size: 20px;
        border-radius: 15px;
    }


    .html {
        width: 10%;
    }

    .php {
        width: 60%;
    }

    .react {
        width: 30%;
    }

    .empty {
        flex: 1;
    }

    img {
        width: 100px;
        height: 100px;
    }
</style>