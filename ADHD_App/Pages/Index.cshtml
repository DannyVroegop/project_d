@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="intro-text">
    <h2><b>Welkom! log in met je gebruikersnaam en wachtwoord!</b></h2>
</div>


<div class="login-box">
    <h2>Inloggen</h2>
    <form>
        <label for="username"></label>
        <input type="text" id="username" name="username" placeholder="Gebruikersnaam">
        <label for="password"></label>
        <input type="password" id="password" name="password" placeholder="Wachtwoord">
        <button type="submit">Inloggen</button>
    </form>
    <p>Ben je nieuw? <a href="Register">Registreer je hier!</a></p>
    <p>[Tijdelijk]<a href="Profiel"> Profiel bekijken </a></p>
</div>


